#ifndef CERNLIB_COJCONV
#define CERNLIB_COJCONV
#endif
+ADD,COJCONV,MAIN,38
C-
C-
C- SET UP FOR HADRONIC PRODUCTION OF TOP QUARKS
C-
      ITDKY=1
      ITLIS=6
      NLEAVE=10
      IEVTYP=1
      ECM=630.
      NFLAV=6
      TOPMAS=150.
      ALAMB=0.2
      IEICHT=1
C-
C- FUSION: FORCE BY CALLING FUSION
      CALL FUSION('TP')
C-
C- FORCE ELECTRON SEMI-LEPTONIC DECAY FOR TOP PARTICLES
      CALL FORCSL('TP','E  ',2)
C-
C- STOP DECAYS OF PI0 AND K0S
      CALL STOPD(110)
      CALL STOPD(20)
C-
C-
+ADD,COJCONV,BOOKH,9
C-
C-
C- SET UP FOR HADRONIC PRODUCTION OF TOP QUARKS
C-
      COMMON//B(10000)
      CALL HLIMIT(10000)
      CALL HOUTPU(ITLIS)
      CALL HERMES(ITLIS)
C-
C-- BOOK HISTOGRAMS
      CALL HBOOK1(1,'PTHARD   $',100,0.,200.)
C
      CALL HBOOK1(21,'ETL FUSION$',100,0.,100.)
C-
C-
+ADD,COJCONV,FILLH,15
C-
C-
C- SET UP FOR HADRONIC PRODUCTION OF TOP QUARKS
C-
      COMMON/CUTS/ETLC
      DATA ICALL/0/
C
      IF(ICALL.GT.0) GO TO 10
      ICALL=1
      ETLC=0.
10    CONTINUE
C
C- BOOK ELECTRONS FROM TOP QUARKS
C
      IF(NPART.EQ.0) RETURN
      DO 1 IPART=1,NPART
C- SELECT ELECTRON/POSITRON
      ITYPE=INT(PARHAD(IPART,6))
      IF(ITYPE.NE.7.AND.ITYPE.NE.8) GO TO 1
C- SELECT TOP QUARK DECAYS ONLY
      IFQRK=ABS(PARQUA(INT(PARHAD(IPART,7)),6))
      IF(IFQRK.NE.6) GO TO 1
C
      ETL=SQRT(PARHAD(IPART,1)**2+PARHAD(IPART,2)**2)
      IF(ETL.LT.ETLC) GO TO 1
      CALL HFILL(1,PTHARD,0.,1.)
      CALL HFILL(21,ETL,0.,1.)
1     CONTINUE
C-
C-
+ADD,COJCONV,OUTH,10
C-
C-
C- SET UP FOR HADRONIC PRODUCTION OF TOP QUARKS
C-
      COMMON/CUTS/ETLC
C
      IF(NEVNTS.EQ.0) RETURN
      FACT=SIGTOT/FLOAT(NEVNTS)
      CALL HOPERA(21,'+',21,21,FACT,0.)
C
      WRITE(ITLIS,5) ETLC
5     FORMAT(/////1X,50(1H=)/1X,'ELECTRONS FROM T QUARKS'
     1,5X,6HETLC =,E12.3,' GEV'/1X,50(1H=)/////)
C
      CALL HISTDO
C-
C-
